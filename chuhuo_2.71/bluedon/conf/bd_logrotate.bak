/var/log/fw/iptables-ng.log
{
    size=500M	
    rotate 0
    copytruncate
    nocreate
    missingok
    notifempty
    prerotate
    echo > /var/log/fw/iptables-ng.log
    rm -f /var/log/fw/iptables-ng.log.*
    endscript
    postrotate
    endscript
}

